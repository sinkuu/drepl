{
    "name": "drepl",
    "description": "A D interpreter.",
    "copyright": "Copyright Â© 2014, dawg",
    "license": "MIT",
    "authors": ["dawg"],
    "lflags-linux-dmd": ["-l:libphobos2.so", "-ldl"],
    "buildTypes": {
        "plain": {
            "buildOptions": ["releaseMode"],
        },
        "debug": {
            "buildOptions": ["debugInfo", "releaseMode"],
        },
        "unittest": {
            "buildOptions": ["unittests", "releaseMode", "debugInfo"]
        }
    },
    "configurations": [
        {
            "name": "library",
            "targetType": "library",
        },
        {
            "name": "console",
            "targetName": "drepl_console",
            "dependencies": {
                "linenoise": "~master"
            },
            "targetType": "executable",
            "sourceFiles": ["examples/console.d"],
        },
        {
            "name": "server",
            "targetName": "drepl_server",
            "dependencies": {
                "vibe-d": "~master"
            },
            "targetType": "executable",
            "stringImportPaths": ["examples"],
            "sourceFiles": ["examples/server.d"],
            "preBuildCommands": [
                "[[ examples/style.min.css -nt examples/style.css ]] || yuglify examples/style.css",
                "[[ examples/console.min.js -nt examples/console.js ]] || yuglify examples/console.js"
            ],
            "lflags-linux-dmd": ["-lselinux"],
        },
        {
            "name": "sandbox",
            "targetName": "drepl_sandbox",
            "targetType": "executable",
            "sourceFiles": ["examples/sandbox.d"],
        }
    ],
    "dependencies": {
        "libdparse": {"branch": "~master", "path": "libdparse"},
    },
}
